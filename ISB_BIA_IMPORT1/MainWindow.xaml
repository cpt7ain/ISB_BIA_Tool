<Window x:Class="ISB_BIA_IMPORT1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISB_BIA_IMPORT1"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="700" 
        MinHeight="700"
        Width="1200"
        MinWidth="1200"
        Background="LightSteelBlue"
        FontSize="{Binding MyFontSize}"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}" 
        Closing="Window_Closing">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="CISO" CommandParameter="2" Command="{Binding AdminSelectGroupCommand}"/>
            <Button Content="Admin" CommandParameter="1" Command="{Binding AdminSelectGroupCommand}"/>
            <Button Content="SBA/IT User" CommandParameter="3" Command="{Binding AdminSelectGroupCommand}"/>
            <Button Content="Normaler User" CommandParameter="0" Command="{Binding AdminSelectGroupCommand}"/>
        </StackPanel>
        <UserControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
