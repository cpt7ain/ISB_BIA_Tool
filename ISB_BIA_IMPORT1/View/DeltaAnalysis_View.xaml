<UserControl x:Class="ISB_BIA_IMPORT1.View.DeltaAnalysis_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:ISB_BIA_IMPORT1.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="700" 
             d:DesignWidth="1200"
             FontSize="14"
             Background="LightSteelBlue"
             DataContext="{Binding Source={StaticResource Locator}, Path=DeltaView}">
    <UserControl.Resources>
        <ResourceDictionary>
            <c:DeltaColorConverter x:Key="DeltaColorConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <c:NegateBooleanToVisibilityConverter x:Key="NegateBooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="700*"/>
        </Grid.RowDefinitions>
        <FrameworkElement x:Name="dummyElement" Visibility="Collapsed"/>
        <Border Grid.ColumnSpan="3">
            <Grid>
                <Label Margin="10,0,0,0" Content="Delta-Analyse" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Button Content="Zurück" Background="Wheat" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Command="{Binding NavBack}"/>
            </Grid>
        </Border>
        <Label Content="Suche:" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,320,0" Visibility="{Binding Mode1, Converter={StaticResource NegateBooleanToVisibilityConverter}}"/>
        <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Width="300" Height="25" Margin="0,0,20,0" Visibility="{Binding Mode1, Converter={StaticResource NegateBooleanToVisibilityConverter}}"/>
        <CheckBox Content="{Binding Instruction}" IsChecked="{Binding Mode}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,10,0,0"/>
        <ListView Margin="10" 
                  Grid.Row="2"                    
                  ItemsSource="{Binding List, IsAsync=True}"
                  Visibility="{Binding Mode, Converter={StaticResource NegateBooleanToVisibilityConverter}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="200" Header="Prozess" DisplayMemberBinding="{Binding Prozess}" />
                    <GridViewColumn Width="110" Header="Sub-Prozess" DisplayMemberBinding="{Binding Sub_Prozess}" />
                    <GridViewColumn Width="200" Header="Applikation" DisplayMemberBinding="{Binding Applikation}" />
                    <GridViewColumn Width="110" Header="{Binding Setting.SZ_1_Name}" DisplayMemberBinding="{Binding SZ_1}" />
                    <GridViewColumn Width="110" Header="{Binding Setting.SZ_2_Name}" DisplayMemberBinding="{Binding SZ_2}" />
                    <GridViewColumn Width="110" Header="{Binding Setting.SZ_3_Name}" DisplayMemberBinding="{Binding SZ_3}" />
                    <GridViewColumn Width="110" Header="{Binding Setting.SZ_4_Name}" DisplayMemberBinding="{Binding SZ_4}" />
                    <GridViewColumn Width="{Binding DataContext.NewSecurityGoalsWidth, Source={x:Reference dummyElement}}" Header="{Binding Setting.SZ_5_Name}" DisplayMemberBinding="{Binding SZ_5}"/>
                    <GridViewColumn Width="{Binding DataContext.NewSecurityGoalsWidth, Source={x:Reference dummyElement}}" Header="{Binding Setting.SZ_6_Name}" DisplayMemberBinding="{Binding SZ_6}" />
                </GridView>
            </ListView.View>
        </ListView>
        <DataGrid Margin="10,10,10,10"
                  ItemsSource="{Binding DeltaList}"
                  Grid.Row="2"
                  VerticalGridLinesBrush="LightGray"
                  HorizontalGridLinesBrush="LightGray"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Visibility="{Binding Mode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Prozessname" Binding="{Binding Prozess}" Width="200" CanUserSort="True"/>
                <DataGridTextColumn Header="Sub-Prozess" Binding="{Binding Sub_Prozess}" Width="110" CanUserSort="True"/>
                <DataGridTextColumn Header="Anwendung" Binding="{Binding Applikation}" Width="200" CanUserSort="True"/>
                <DataGridTemplateColumn Header="{Binding DataContext.Setting.SZ_1_Name, Source={x:Reference dummyElement}}" Width="110" SortMemberPath="SZ_1">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding SZ_1}" Background="{Binding SZ_1, Converter={StaticResource DeltaColorConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{Binding DataContext.Setting.SZ_2_Name, Source={x:Reference dummyElement}}" Width="110" SortMemberPath="SZ_2">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding SZ_2}" Background="{Binding SZ_2, Converter={StaticResource DeltaColorConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{Binding DataContext.Setting.SZ_3_Name, Source={x:Reference dummyElement}}" Width="110" SortMemberPath="SZ_3">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding SZ_3}" Background="{Binding SZ_3, Converter={StaticResource DeltaColorConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{Binding DataContext.Setting.SZ_4_Name, Source={x:Reference dummyElement}}" Width="110" SortMemberPath="SZ_4">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding SZ_4}" Background="{Binding SZ_4, Converter={StaticResource DeltaColorConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn 
                    Visibility="{Binding DataContext.NewSecurityGoals, Source={x:Reference dummyElement}}" 
                    Header="{Binding DataContext.Setting.SZ_5_Name, Source={x:Reference dummyElement}}" 
                    Width="110" 
                    SortMemberPath="SZ_5">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding SZ_5}" Background="{Binding SZ_5, Converter={StaticResource DeltaColorConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn 
                    Visibility="{Binding DataContext.NewSecurityGoals, Source={x:Reference dummyElement}}" 
                    Header="{Binding DataContext.Setting.SZ_6_Name, Source={x:Reference dummyElement}}" 
                    Width="110" 
                    SortMemberPath="SZ_6">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding SZ_6}" Background="{Binding SZ_6, Converter={StaticResource DeltaColorConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding ExportDeltaList}" Visibility="{Binding Mode1, Converter={StaticResource BooleanToVisibilityConverter}}" Content="Excel-Export" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
    </Grid>
</UserControl>
